#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  echo "ğŸš€ Preparing databases..."
  ./bin/rails db:prepare
  
  echo "ğŸ’¾ Setting up Cache database..."
  ./bin/rails db:create:cache
  ./bin/rails db:migrate:cache
  
  echo "âš¡ Setting up Queue database..."
  ./bin/rails db:create:queue
  ./bin/rails db:migrate:queue
  
  echo "ğŸ“¡ Setting up Cable database..."
  ./bin/rails db:create:cable
  ./bin/rails db:migrate:cable
  
  echo "âœ… All databases ready!"
fi

exec "${@}"
