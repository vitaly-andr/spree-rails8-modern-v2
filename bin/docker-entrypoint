#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# Check if we're starting a web server (works with both rails server and thrust)
if [[ "$*" == *"rails server"* ]] || [[ "$*" == *"thrust"* ]]; then
  echo "ðŸš€ Preparing databases..."
  ./bin/rails db:prepare
  
  echo "ðŸ’¾ Setting up Cache database..."
  ./bin/rails db:create:cache 2>/dev/null || true
  ./bin/rails db:migrate:cache
  
  echo "âš¡ Setting up Queue database..."
  ./bin/rails db:create:queue 2>/dev/null || true
  ./bin/rails db:migrate:queue
  
  echo "ðŸ“¡ Setting up Cable database..."
  ./bin/rails db:create:cable 2>/dev/null || true
  ./bin/rails db:migrate:cable
  
  echo "âœ… All databases ready!"
fi

exec "${@}"
